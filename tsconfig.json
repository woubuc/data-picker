{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es5", "es6"],

    "rootDir": "./src",
    "outDir": "./dist",

    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  }
}
